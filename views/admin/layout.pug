doctype html
html(lang="ru")
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery-3.3.1.min.js')
    script(src='/js/bootstrap.min.js')
  body
    .container
      .row
        .col-sm-3.col-md-offset-1
          h5 Документы
          pre.
            Количество:
            #[strong Подразделения:] !{data.departments}
            #[strong Договоры:] !{data.contracts}
            #[strong Сотрудники:] !{data.stewards}
            #[strong Классификатор:] !{data.eclasses}
            #[strong Источники:] !{data.sources}
            #[strong Поступления:] !{data.incomes}
            #[strong Затраты:] !{data.outlays}
            #[strong ВидыЗатрат:] !{data.species}

            modification time
            Inet_MUSmetaLSAll.txt
            #[strong !{data.fromdate}]
            загружено
            #[strong !{data.loaded}]

            !{data.version}
          button(type="button" class="btn btn-default" onclick="this.innerHTML='Загружаю...'; window.location.href='/importdata';") Импорт данных
          h5= dataloaded
        .col-sm-6
            div(class="hidden-print")
              div(class="btn-toolbar" style="background-color: #f8f8f8; margin-bottom: 5px;")
                div(class="btn-group")
                  button(type="button" class="btn btn-default" onclick="location='/admin/bookers';") Экономисты
                  button(type="button" class="btn btn-default" onclick="location='/admin/stewards';") Руководители
                div(class="btn-group")
                  button(type="button" class="btn btn-default" onclick="location='/admin/departments';") Подразделения
                div(class="btn-group navbar-right" style="float: right; margin-right: 10px;")
                  button(type="button" class="btn btn-default" onclick="location='/logout';") Выйти
            block content
