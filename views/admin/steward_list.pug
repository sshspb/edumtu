extends layout

block content
  .container
    .row
      if record_list_1
        .col-sm-4
          table(class='table table-striped table-condensed')
            thead
              tr
                th= title
                th Login
            tbody
              each record in record_list_1
                tr
                  td: a(href=record.url) #{record.name}
                  td #{record.login}
      else
        .col-sm-1
      if record_list_2
        .col-sm-4
          table(class='table table-striped table-condensed')
            thead
              tr
                th= title
                th Login
            tbody
              each record in record_list_2
                tr
                  td: a(href=record.url) #{record.name}
                  td #{record.login}
      .col-sm-4
        table(class='table table-striped table-condensed')
          thead
            tr
              th= title
              th Login
          tbody
            each record in record_list_3
              tr
                td: a(href=record.url) #{record.name}
                td #{record.login}
