extends layout

block content
  div
    table(class='table table-striped table-condensed')
      thead
        tr
          th Наименование
          th(class='text-right') Начало
          th(class='text-right') План
          th(class='text-right') Исполнено
          th(class='text-right') Остаток
      tbody
        each source in source_list
          tr
            td: a(href=source.url) #{source._id.source} 
            td(class='text-right cost') #{source.remains} 
            td(class='text-right cost') #{source.income} 
            td(class='text-right cost') #{source.outlay} 
            td(class='text-right cost') #{source.balance} 
      tfoot#total
        tr
          th Итого
          th(class='text-right') 
          th(class='text-right') 
          th(class='text-right') 
          th(class='text-right') 
