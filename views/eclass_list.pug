extends layout

block content
  table(class='table table-striped table-condensed')
    thead
      tr
        th Код
        th Наименование
        th(class='text-right') Начало
        th(class='text-right') План
        th(class='text-right') Исполнено
        th(class='text-right') Остаток
    tbody
      each eclass in eclass_list
        tr
          th #{eclass.code} 
          td #{eclass.name} 
          td(class='text-right cost') #{eclass.remains} 
          td(class='text-right cost') #{eclass.income} 
          td(class='text-right cost') #{eclass.outlay} 
          td(class='text-right cost') #{eclass.balance} 
    tfoot#total
      tr
        th Итого
        th 
        th(class='text-right') 
        th(class='text-right')  
        th(class='text-right') 
        th(class='text-right')  
