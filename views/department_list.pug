extends layout

block content
  div
    table(class='table tree table-condensed')
      thead
        tr
          th Подразделение
          th Руководитель
          th(class='text-right') Остаток
      tbody
        each department in department_list
          tr(class= department.trClass)
            td
              span &nbsp;
                if department.allowed
                  a(href=department.url) #{department.name}
                else
                  span #{department.name}
            td #{department.stewardName} 
            td(class='text-right cost') #{department.saldo}
      tfoot
        tr
          th Итого
          th
          th(class='text-right') #{footer.saldo}
