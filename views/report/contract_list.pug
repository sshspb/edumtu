extends layout

block content
  div
    table(class='table table-striped table-condensed')
      thead
        tr
          th Договор
          th Ответственный
          th Источник
          th(class='text-right') Начало
          th(class='text-right') План
          th(class='text-right') Исполнено
          th(class='text-right') Остаток
      tbody
        each contract in contract_list
          tr
            td: a(href=contract._id.url) #{contract._id.name} 
            td: a(href=contract._id.steward_url) #{contract._id.steward} 
            td #{contract._id.source} 
            td(class='text-right cost') #{contract.remains} 
            td(class='text-right cost') #{contract.income} 
            td(class='text-right cost') #{contract.outlay} 
            td(class='text-right cost') #{contract.balance} 
      tfoot#total
        tr
          th Итого
          th 
          th 
          th(class='text-right') 
          th(class='text-right') 
          th(class='text-right') 
          th(class='text-right') 
