extends layout
block content
  p
    each department in department_list
      span &nbsp; / &nbsp;
        a(href=department.url) #{department.name}
    span &nbsp; / &nbsp; Договор 
    span(style='font-weight: 700;') &nbsp; 
      a(href=contract.url) #{contract._id}
    span , &nbsp; Ответственный  &nbsp; 
      a(href=steward.url) #{steward._id} 
  p Исполнено по коду экономического классификатора
    span(style='font-weight: 700;') &nbsp; &nbsp; #{eclass._id.eCode} #{eclass._id.eName}

  table(class='table table-striped table-condensed')
    thead
      tr
        th Дата
        th(class='text-right')  Сумма
        th Вид
        th Примечание
    tbody
      each outlay in outlay_list
        tr
          td(class='date') #{outlay.date}
          td(class='text-right cost') #{outlay.total}
          td #{outlay.species}
          td #{outlay.note}
    tfoot#total
      tr
        th Итого
        th(class='text-right') 
        th
        th
        