extends layout

block content
  h5 Ответственный
    span(class='h3') &nbsp; #{steward.name}
  table(class='table table-striped table-condensed')
    thead
      tr
        th Договор
        th Источник
        th(class='text-right') Начало
        th(class='text-right') План
        th(class='text-right') Исполнено
        th(class='text-right') Остаток
    tbody
      each contract in contract_list
        tr
          td: a(href=contract.url) #{contract.name} 
          td #{contract._source.name} 
          td(class='text-right cost') #{contract.budget.remains} 
          td(class='text-right cost') #{contract.budget.income} 
          td(class='text-right cost') #{contract.budget.outlay} 
          td(class='text-right cost') #{contract.budget.balance} 
    tfoot#total
      tr
        th Итого
        th
        th(class='text-right') 
        th(class='text-right') 
        th(class='text-right') 
        th(class='text-right') 
