extends layout

block content
  table(class='table table-striped table-condensed')
    thead
      tr
        th Фамилия И.О.
        th(class='text-right') Начало
        th(class='text-right') План
        th(class='text-right') Исполнено
        th(class='text-right') Остаток
    tbody
      each steward in steward_list
        tr
          td: a(href=steward.url) #{steward.name}
          td(class='text-right cost') #{steward.remains} 
          td(class='text-right cost') #{steward.income} 
          td(class='text-right cost') #{steward.outlay} 
          td(class='text-right cost') #{steward.balance} 
    tfoot#total
      tr
        th Итого
        th(class='text-right') 
        th(class='text-right') 
        th(class='text-right') 
        th(class='text-right') 
