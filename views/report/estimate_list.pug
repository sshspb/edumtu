extends layout

block content
  div
    table(class='table table-striped table-condensed')
      thead
        tr
          th Код Наименование
          th(class='text-right') План
          th(class='text-right') Остаток
      tbody
        each estimate in estimate_list
          tr
            td #{estimate._id} 
            td(class='text-right cost') #{estimate.plan} 
            td(class='text-right cost') #{estimate.balance} 
      tfoot#total
        tr
          th Итого
          th(class='text-right') 
          th(class='text-right') 
