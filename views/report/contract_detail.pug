extends layout

block content

  p Договор 
    span(style='font-weight: 700;') &nbsp; #{contract.name}
    span , &nbsp; &nbsp;
      a(href=contract._source.url) #{contract._source.name}
    span , &nbsp; Ответственный  &nbsp; 
      if contract._steward
        a(href=contract._steward.url) #{contract._steward.name} 
      else
        p &nbsp; Не указан
  p Подразделение 
    span &nbsp; 
      if (allowedParent) 
        a(href=parent.url) #{parent.name}
      else
        strong #{parent.name}
    span &nbsp; &nbsp; / &nbsp; &nbsp;
      if (allowedDepartment) 
        a(href=department.url) #{department.name}
      else
        strong #{department.name}

  div(style='margin-left:20px;margin-top:20px')
    ul(class="nav nav-tabs")
      li(class="active"): a(data-toggle="tab" href="#estimates") Смета
      li: a(data-toggle="tab" href="#incomes") Доходы
      li: a(data-toggle="tab" href="#outlays") Расходы
    div(class="tab-content")
      div(id="estimates" class="tab-pane fade in active")
        table(class='table table-striped table-condensed')
          thead
            tr
              th Код
              th Наименование
              th(class='text-right') Начало
              th(class='text-right') План
              th(class='text-right') Исполнено
              th(class='text-right') Остаток
          tbody
            each estimate in estimate_list
              tr
                th #{estimate.code} 
                td: a(href=estimate.url) #{estimate.name} 
                td(class='text-right cost') #{estimate.remains} 
                td(class='text-right cost') #{estimate.income} 
                td(class='text-right cost') #{estimate.outlay} 
                td(class='text-right cost') #{estimate.balance} 
          tfoot#total
            tr
              th 
              th Итого
              th(class='text-right') 
              th(class='text-right') 
              th(class='text-right') 
              th(class='text-right')  
      div(id="incomes" class="tab-pane fade")
        table(class='table table-striped table-condensed')
          thead
            tr
              th Дата
              th(class='text-right')  Сумма
              th Примечание
          tbody
            each income in income_list
              tr
                td #{income.datestr}
                td(class='text-right cost') #{income.sum}
                td #{income.note}
          tfoot#total
            tr
              th Итого
              th(class='text-right') 
              th
      div(id="outlays" class="tab-pane fade")
        table(class='table table-striped table-condensed')
          thead
            tr
              th Дата
              th(class='text-right')  Сумма
              th Вид
              th Примечание
          tbody
            each outlay in outlay_list
              tr
                td #{outlay.datestr}
                td(class='text-right cost') #{outlay.sum}
                td #{outlay.species}
                td #{outlay.note}
          tfoot#total
            tr
              th Итого
              th(class='text-right') 
              th
              th
