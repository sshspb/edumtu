extends layout
block content
  p
    each department in department_list
      span &nbsp; / &nbsp;
        a(href=department.url) #{department.name}
    span &nbsp; / &nbsp; Договор 
    span(style='font-weight: 700;') &nbsp; #{contract.name}
    span , &nbsp; Ответственный  &nbsp; 
      if steward
        a(href=steward.url) #{steward._id} 

  div(style='margin-left:20px;margin-top:20px')
    ul(class="nav nav-tabs")
      li(class="active"): a(data-toggle="tab" href="#estimates") Смета
      li: a(data-toggle="tab" href="#incomes") Доходы
      li: a(data-toggle="tab" href="#outlays") Расходы
    div(class="tab-content")
      div(id="estimates" class="tab-pane fade in active")
        table(class='table table-striped table-condensed')
          thead
            tr
              th Код
              th Наименование
              th(class='text-right') Начало
              th(class='text-right') План
              th(class='text-right') Приход
              th(class='text-right') Расход сОб
              th(class='text-right') Расход факт
              th(class='text-right') Остаток факт
              th(class='text-right') Остаток
              th(class='text-right') Остаток безОб
          tbody
            each estimate in estimate_list
              tr
                th: a(href=estimate.url) #{estimate._id.eCode} 
                td: a(href=estimate.url) #{estimate._id.eName} 
                td(class='text-right cost') #{estimate.remains} 
                td(class='text-right cost') #{estimate.plan} 
                td(class='text-right cost') #{estimate.income} 
                td(class='text-right cost') #{estimate.outlayO} 
                td(class='text-right cost') #{estimate.outlay} 
                td(class='text-right cost') #{estimate.balance} 
                td(class='text-right cost') #{estimate.balanceE} 
                td(class='text-right cost') #{estimate.balanceWO} 
          tfoot#total
            tr
              th 
              th Итого
              th(class='text-right') 
              th(class='text-right') 
              th(class='text-right') 
              th(class='text-right')  
              th(class='text-right') 
              th(class='text-right') 
              th(class='text-right') 
              th(class='text-right')  
      div(id="incomes" class="tab-pane fade")
        table(class='table table-striped table-condensed')
          thead
            tr
              th Дата
              th(class='text-right')  Сумма
              th Примечание
          tbody
            each income in income_list
              tr
                td(class='date') #{income.date}
                td(class='text-right cost') #{income.total}
                td #{income.note}
          tfoot#total
            tr
              th Итого
              th(class='text-right') 
              th
      div(id="outlays" class="tab-pane fade")
        table(class='table table-striped table-condensed')
          thead
            tr
              th Дата
              th(class='text-right')  Сумма
              th Вид
              th Примечание
          tbody
            each outlay in outlay_list
              tr
                td(class='date') #{outlay.date}
                td(class='text-right cost') #{outlay.total}
                td #{outlay.species}
                td #{outlay.note}
          tfoot#total
            tr
              th Итого
              th(class='text-right') 
              th
              th
