extends layout
block content
  h5 Исполнено по коду экономического классификатора
    span(style='font-weight: 700;') &nbsp; &nbsp; #{title}

  table(class='table table-striped table-condensed')
    thead
      tr
        th Дата
        th(class='text-right')  Сумма
        th Вид
        th Примечание
    tbody
      each outlay in outlay_list
        tr
          td(class='date') #{outlay.date}
          td(class='text-right cost') #{outlay.total}
          td #{outlay.species}
          td #{outlay.note}
    tfoot#total
      tr
        th Итого
        th(class='text-right') 
        th
        th
        